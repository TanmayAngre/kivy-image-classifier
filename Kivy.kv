
<WrappedLabel@Label>:
	size_hint_y: None
	height: self.texture_size[1] + self.texture_size[1]/2
	markup: True

<KivyRoot>:
	orientation: "vertical"

	ActionBar: 
		ActionView:
			ActionPrevious:
				title: "Image Classifier"
				with_previous: False
			ActionOverflow: 
				ActionButton: 
					text: "Settings"
					on_press: app.open_settings()

	ScreenManager:
		id: screen_manager
		StartScreen: 
			name: 'start_screen'
		AboutScreen: 
			name: 'about_screen'

<StartScreen@Screen>:
	BoxLayout:
		orientation: 'vertical'
		padding: root.width*0.2, root.height*0.2
		spacing: min(root.width, root.height)*0.2

		WrappedLabel:
			text: '[b]Select one of the options...[/b]'
			font_size: self.width/10
			
		Button:
			text: 'Duplicate Images'

		Button:
			text: 'Text and Known Images'

		Button:
			text: 'About'
			on_release: app.root.changeScreen(self.text.lower())	


<AboutScreen@Screen>:
	BoxLayout:
		orientation: 'vertical'
		padding: root.width*0.2, root.height*0.2
		spacing: min(root.width, root.height)*0.2

	Label:
		halign: 'center'
		center_y: 0.5
		text: app.getText()
		on_ref_press: app.on_ref_press(*args)
		font_size: root.height/20
		text_size: self.width, None
		markup: True
